#region-listas.container

  .region
    .region-title
      %h1= page_title!('Listando listas')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Lista', new_lista_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Fiesta
            %th Fecha
            %th
            %th
            %th

          - @listas.each do |lista|
            %tr
              %td= lista.evento.titulo
              %td= l lista.evento.fecha, format: :short
              %td= link_to 'Ver', lista, class: 'btn btn-info'
              - if current_usuario
                %td= link_to 'Editar', edit_lista_path(lista), class: 'btn btn-success'
                %td= link_to 'Eliminar', lista, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
