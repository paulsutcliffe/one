#region-usuario.container

  .region
    .region-title
      %h1= page_title!('Ingresar')
  .region
    = link_to image_tag('/assets/img-facebook-round.png'), usuario_omniauth_authorize_path(provider: 'facebook')
    = link_to "Iniciar sesión con mi cuenta de Facebook", usuario_omniauth_authorize_path(provider: 'facebook')
    .region
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'form-horizontal' }) do |f|
      .form-group
        = f.label :email, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.email_field :email, :autofocus => true, class: 'form-control'
      .form-group
        = f.label :password, "Contraseña", class: 'col-sm-2 control-label'
        .col-sm-10
          = f.password_field :password, class: 'form-control'
      .admin-controls
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label :remember_me, "No volver a preguntar"
          = f.submit "Ingresar", class: 'btn btn-default'
  = render "usuarios/shared/links"
