#region-contactos.container

  .region
    .region-title
      %h1= page_title!('Listando Mensajes')

      .table-responsive
        %table.table
          %tr
            %th Nombre
            %th E-mail
            %th Télefono
            %th Mensaje
            %th Fecha
            %th

          - @contactos.each do |contacto|
            %tr
              %td= contacto.nombre
              %td= contacto.email
              %td= contacto.telefono
              %td= contacto.mensaje
              %td= l contacto.created_at, format: :short
              - if current_admin
                %td= link_to 'Eliminar', contacto, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
