#region-mixes.container
  .region
    .region-title
      %h1= page_title!('mix')

  .region
    %p
      %b Soundcloud link:
      = @mix.soundcloud_link

  .region
    - if current_admin
      .admin-controls
        = link_to 'Editar', edit_mix_path(@mix), class: 'btn btn-success'
    = link_to 'Regresar', mixes_path, class: 'btn btn-warning'
